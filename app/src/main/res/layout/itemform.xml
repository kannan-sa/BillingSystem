<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="25dp"
    >

    <TextView
        android:id="@+id/labelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="New Item"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/labelTitle"
        android:layout_centerHorizontal="true">

        <NumberPicker
            android:id="@+id/digitOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/labelName"
            android:layout_alignRight="@+id/labelName"
            android:layout_below="@+id/cmdCancel"
            android:layout_weight="1" />

        <NumberPicker
            android:id="@+id/dightTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/digitOne"
            android:layout_alignBottom="@+id/digitOne"
            android:layout_toEndOf="@+id/digitOne"
            android:layout_toRightOf="@+id/digitOne"
            android:layout_weight="1" />

        <NumberPicker
            android:id="@+id/digitThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dightTwo"
            android:layout_alignBottom="@+id/dightTwo"
            android:layout_toEndOf="@+id/dightTwo"
            android:layout_toRightOf="@+id/dightTwo"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Infos"
        android:orientation="vertical"
        android:layout_below="@+id/layoutID">

        <TextView
            android:id="@+id/labelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/labelTitle"
            android:text="Name:" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/labelName"
            android:ems="10"
            android:hint="Name..."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/labelQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editName"
            android:layout_marginTop="11dp"
            android:text="Quantity:" />

        <EditText
            android:id="@+id/editQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/labelQuantity"
            android:ems="10"
            android:hint="Quantity..."
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/labelUnitPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editQuantity"
            android:layout_marginTop="12dp"
            android:text="Unit Price:" />

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/labelUnitPrice"
            android:ems="10"
            android:hint="Price..."
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cmdCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editPrice"
                android:layout_weight="1"
                android:onClick="CancelItem"
                android:text="Cancel" />

            <Button
                android:id="@+id/cmdSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cmdCancel"
                android:layout_alignBottom="@+id/cmdCancel"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:onClick="SaveItem"
                android:text="Save" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>