<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="25dp"
    >

    <LinearLayout
        android:id="@+id/layoutID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <NumberPicker
            android:id="@+id/digitOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <NumberPicker
            android:id="@+id/dightTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <NumberPicker
            android:id="@+id/digitThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:text="பொருள்:" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="பொருள்..."
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:text="அளவு:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editQuantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".21"
                    android:ems="10"
                    android:hint="அளவு..."
                    android:inputType="numberDecimal"
                    android:text="1.0" />

                <Button
                    android:id="@+id/incQnt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".11"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/decQnt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".11"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/labelUnitPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:text="விலை ₹:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".21"
                    android:ems="10"
                    android:hint="விலை..."
                    android:inputType="numberDecimal"
                    android:text="1.0" />
                <Button
                    android:id="@+id/incPrc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".11"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/decPrc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".11"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            >
            <Button
                android:id="@+id/cmdCancel"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="CancelItem"
                android:text="Cancel" />

            <Button
                android:id="@+id/cmdSave"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="SaveItem"
                android:text="Save" />
        </TableRow>
    </TableLayout>

</RelativeLayout>